@model Mekashron.Testing.Web.Models.Login.LoginView

<body style="background: url(../Image/img1.jpg)";>
<div align="center" style="background-color: transparent; background-image: url('Image/image1.jpg')">
    <div class="wrapper" style="background: darkgrey; margin-top: 20%; margin-bottom: 20%; opacity: 0.85">
        <div class="container" align="center">
            <div class="row">
                <div class="module module-login span4 offset4">
                    <form class="form-vertical" action="@Url.Action("Login")" method="post">
                        <div class="module-head" style="background: white; margin-left: 5%">
                            <h3 style=" font-size: 35px;" class="gradient-text"> Sign In </h3>
                        </div>
                        <div class="module-body" style="margin-top: 3%; margin-left: 5%; margin-right: 5%; margin-bottom: 3%">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="control-group" style="margin: 10px">
                                <div class="controls row-fluid">
                                    <input class="span12" type="text" name="username" placeholder="Username" style="width: 300px; height: 43px;" value="@Model.UserName" />
                                </div>
                                <div style="margin-left: -21%">
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12" type="password" name="password" placeholder="Password" style="width: 300px; height: 43px;" value="@Model.Password" />
                                </div>
                                <div style="margin-left: -21%">
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        @if (ViewBag.Result != null && ViewBag.Result.Success)
                        {
                            <div class="controls row-fluid text-success" style=" font-size: 35px;">Sign in is successful</div>
                        }
                        else if (ViewBag.Result != null && !ViewBag.Result.Success)
                        {
                            <div class="controls row-fluid text-danger" style=" font-size: 35px;">@ViewBag.Result.Message</div>
                        }
                        <div class="modal-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <label class="checkbox" style="display: inline-block; margin-right: 6%;">
                                        <input name="rememberMe" value="1" type="checkbox" /> Remember me
                                    </label>
                                    <button type="submit" class="btn btn-default " value="Login" name="loginBtn">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>